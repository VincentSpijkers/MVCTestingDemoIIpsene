<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="views.BoardView">
    <top>
        <Label BorderPane.alignment="CENTER" fx:id="diceRollLabel"/>
    </top>
   <center>
       <GridPane
               BorderPane.alignment="CENTER"
               fx:id="boardGrid"
               minWidth="400"
               minHeight="400"
               prefHeight="400.0" prefWidth="600.0">
       </GridPane>
   </center>
    <bottom>
        <Button BorderPane.alignment="CENTER" onMouseClicked="#rollDice">Roll Dice!</Button>
    </bottom>
</BorderPane>
